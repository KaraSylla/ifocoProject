doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Bootsrtap Free Admin Template - SIMINTA | Admin Dashboad Template
    // Core CSS - Include with every page
    link(href='/bootstrap.css', rel='stylesheet')
    link(href='/font-awesome.css', rel='stylesheet')
    link(href='/pace-theme-big-counter.css', rel='stylesheet')
    link(href='/style.css', rel='stylesheet')
    link(href='/main-style.css', rel='stylesheet')
  body.body-Login-back
    .container
      .row
        .col-md-4.col-md-offset-4.text-center.logo-margin
          img(src='/logo.png', alt='')
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Connexion
            .panel-body
              form(role='form', method="post", action="/test")
                fieldset
                  .form-group
                    input.form-control(placeholder='E-mail', name='email', type='email', autofocus='')
                  .form-group
                    input.form-control(placeholder='Password', name='password', type='password', value='')
                  .checkbox
                    label
                      input(name='remember', type='checkbox', value='Remember Me')
                      | Remember Me
                  // Change this to a button or input when using this as a form
                  button.btn.btn-lg.btn-success.btn-block(type='submit') Login
    .container
      .row
        .col-md-4.col-md-offset-4
          div(class='alert alert-danger')= msgErr
          div(class='alert alert-success')= msgeSucces
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Inscription
            .panel-body
              form(role='form', method="post", action="/verification-formulaire-inscription")
                fieldset
                  .form-group
                    input.form-control(placeholder='E-mail', name='pseudo', type='email', autofocus='')
                  .form-group
                    input.form-control(placeholder='Password', name='firstMdp', type='password', value='')
                  .form-group
                    input.form-control(placeholder='Confirm Password', name='secondMdp', type='password', value='')
                  .checkbox
                    label
                      input(name='remember', type='checkbox', value='Remember Me')
                      | Remember Me
                  // Change this to a button or input when using this as a form
                  button.btn.btn-lg.btn-success.btn-block(type='submit') Inscription
    // Core Scripts - Include with every page
    script(src='/jquery-1.10.2.js')
    script(src='/bootstrap.min.js')
    script(src='/jquery.metisMenu.js')
    script(src='/script.js')
